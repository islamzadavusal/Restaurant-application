<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewFoodsCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1">

            <ImageView
                android:id="@+id/imageViewCart"
                android:layout_width="187dp"
                android:layout_height="178dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/test_image" />

            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toEndOf="@+id/imageViewCart"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/delete_icon" />

            <TextView
                android:id="@+id/textViewFoodNameCart"
                android:layout_width="168dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cookie"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/color4"
                android:textSize="40sp"
                app:layout_constraintEnd_toStartOf="@+id/imageViewDelete"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewCart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="182dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:text="Username"
                android:textColor="@color/color4"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageViewCart" />

            <TextView
                android:id="@+id/textViewCategoryinCart"
                android:layout_width="193dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/cinzel"
                android:gravity="center"
                android:text="Category"
                android:textColor="@color/color4"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewUsername"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCart" />

            <TextView
                android:id="@+id/textViewPriceCart"
                android:layout_width="58dp"
                android:layout_height="25dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:gravity="center"
                android:text="Price"
                android:textColor="@color/color4"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewCategoryinCart"
                app:layout_constraintStart_toEndOf="@+id/textVieworderAmountCart" />

            <TextView
                android:id="@+id/textVieworderAmountCart"
                android:layout_width="123dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:gravity="center"
                android:text="Amount"
                android:textColor="@color/color4"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewCategoryinCart"
                app:layout_constraintStart_toEndOf="@+id/imageViewCart" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
